    Misejour1: TMenuItem;
    Categorie1: TMenuItem;
    Secteur1: TMenuItem;
    Commerce1: TMenuItem;
    Industrie1: TMenuItem;
    Service1: TMenuItem;
    ComA1: TMenuItem;
    ComB1: TMenuItem;
